/* recommend.wxss */
.title-container{
  height: 80rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 1rpx;
  border-bottom: 1rpx solid #e6e6e6;
}

.title-link{
  font-size: 30rpx;
  color: #333;
  margin-left: 30rpx;
}

.title-link-tips{
  font-size: 28rpx;
  color: #999;
}

.top-container {
  background-color: white;
  height: 96rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx 23rpx 32rpx;
}
.user-info{
  display: flex;
  align-items: center;
}
.arrow{
  width: 15rpx;
  height: 27rpx;
  padding-left: 10rpx;
}
.bg-avatar {
  height: 98rpx;
  width: 98rpx;
  border-radius: 50%;
}

.avatar {
  height: 91rpx;
  width: 91rpx;
  border-radius: 50%;
  position: absolute;
  left: 36rpx;
}

.send-text{
  font-size: 26rpx;
  color: #666;
  margin-left: 20rpx;
}

.customer-info{
  margin-top: 20rpx;
  background-color: #fff;
}
.caption{
  border-bottom: 1rpx solid #e6e6e6;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.row{
  display: flex;
  border-bottom: 1rpx solid #e6e6e6;
  min-height: 69rpx;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx 0 32rpx;
}
.label{
  padding-right: 30rpx;
  font-size: 28rpx;
  color: #999;
}
.rt{
  flex: 1;
}
.input{
  height: 59rpx;
  color: #333;
  font-size: 26rpx;
}
.select{
  color: #333;
  font-size: 26rpx;
}
.picker{
  display: flex;
  align-items: center;
  width: 500rpx;
  height: 50rpx;
  flex-direction: row-reverse
}

.space{
  width: auto;
  height: 50rpx;
  background-color: white;
}
.placeholder{
  color: #999;
}
.button{
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 62rpx;
  height: 92rpx;
  line-height: 92rpx;
  background-color: #ff7800;
  border-radius: 10rpx;
  color: white;
  font-size: 18;
}

.picker-container{
  width: 200;
  height: 50;
  background-color: red
}

.picker-default{
  font-size: 26rpx;
  color: #999;
}
.showName{
  font-size: 26rpx;
}
.pickerView{
  font-size: 25rpx;
}